Alias_File = File.open(".bash_aliases")
Alias_File.each_line { |line| puts line }

OR (cleaner, smaller)

IO.foreach(".bash_aliases") { |line| puts line }

###################################
##FINAL SOLUTION##

#!/usr/bin/env ruby

BASH_ALIASES = "#{Dir.home}/.bash_aliases"

IO.foreach("#{BASH_ALIASES}") { |line| puts line }
